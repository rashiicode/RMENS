      <table id="example" class="table table-striped" style="width:100%">

      <thead>
          <tr>
              <th>ID</th>
              <th>Username</th>
              <th>Email</th>
              <th>Status</th>
              <th>Actions</th>
          </tr>
      </thead>
      <tbody>
          <!-- Example table row, you can add more rows dynamically with server data -->

          <%let count=0%>
          <% users.forEach(user => { %>
            <% count++ %>
            <tr>
                <td><%= count%></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.isActive ? 'Active' : 'Blocked' %></td>
                <td>
                    <% if (user.isActive) { %>
                        <form action="/admin/block/<%= user._id %>" method="POST" style="display: inline;">
                            <button type="submit" style="background-color: rgba(104, 101, 193, 0.947); color: white;border-color: aliceblue;color: rgb(238, 238, 238);padding: 5px;width: 70px;text-align: center;">BLOCK</button>
                        </form>
                    <% } else { %>
                        <form action="/admin/unblock/<%= user._id %>" method="POST" style="display: inline;">
                            <button type="submit" style="background-color: rgba(176, 0, 0, 0.947); color: white;border-color: aliceblue;color: rgb(238, 238, 238);padding: 5px;width: 70px;text-align: center;">UNBLOCK</button>
                        </form>
                    <% } %>
                </td>
            </tr>
        <% }) %>
          <!-- Add more rows as needed -->
      </tbody>
  </table>


      
      
